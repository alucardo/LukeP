%h4.col-md-4.col-md-offset-2
%div.col-md-6.col-md-offset-3
  = simple_form_for division do |form|
    %div.form-group.col-md-12
      = form.input :name, class: "form-control"
      = form.input :student_id, as: :select, input_html: { multiple: true },
                   collection: (students), label: 'Students:',
                   label_method: :fullname, value_method: :id
      = form.input :subject_ids, as: :select, input_html: { multiple: true },
                  collection: (Subject.all), label: 'Subjects:',
                  label_method: :name, value_method: :id
    %div.text-center.col-md-12
      = form.submit "Submit", class: "btn btn-success"
