%h4.col-md-4.col-md-offset-2
%div.col-md-6.col-md-offset-3
  = simple_form_for [:admin, user] do |form|
    %div.form-group.col-md-12
      = form.input :firstname, class: "form-control"
    %div.form-group.col-md-12
      = form.input :lastname, class: "form-control"
    %div.form-group.col-md-12
      = form.input :email, class: "form-control"
    %div.form-group.col-md-12
      = form.input :password, class: "form-control"
    %div.form-group.col-md-12
      = form.input :password_confirmation, class: "form-control"
    %fieldset
    %legend User Roles
    = form.association :roles
    %div.text-center.col-md-12
      = form.submit "Submit", class: "btn btn-success"
