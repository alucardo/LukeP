%h4.col-md-4.col-md-offset-2
%div.col-md-6.col-md-offset-3
  = form_for [:admin, user] do |form|
    %div.form-group.col-md-12
      = form.label :firstname
      = form.text_field :firstname, class: "form-control"
    %div.form-group.col-md-12
      = form.label :lastname
      = form.text_field :lastname, class: "form-control"
    %div.form-group.col-md-12
      = form.label :email
      = form.text_field :email, class: "form-control"
    %div.form-group.col-md-12
      = form.label :password
      = form.password_field :password, class: "form-control"
    %div.form-group.col-md-12
      = form.label :password_confirmation
      = form.password_field :password_confirmation, class: "form-control"
    %div.text-center.col-md-12
      = form.submit "Submit", class: "btn btn-success"
    %fieldset
    %legend User Roles
    = form.collection_select :role_ids, Role.all, :id, :name, {}, multiple: true
