%h1 People
%p

%table.table.table-hover
  %tr.active
    %th Name
    %th Email
    %th Division
    %th Roles
    %th
    %th
    %th

  - users.each do |user|
    %tr
      %td= "#{user.firstname} #{user.lastname}"
      %td= user.email
      %td= "division"
      %td= user.get_roles_as_string
      %td= link_to 'Show', admin_user_path(user), class: 'btn btn-success btn-block btn-sm'
      -if current_user.has_role? :headmaster
        %td= link_to 'Edit', edit_admin_user_path(user), class: 'btn btn-info btn-block btn-sm'
        %td= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-block btn-sm'

- if current_user.has_role? :headmaster
  = link_to 'New', new_admin_user_path, class: 'btn btn-success'
%br
