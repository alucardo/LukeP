%h4.col-md-4.col-md-offset-2
%div.col-md-6.col-md-offset-3
  = simple_form_for grade do |form|
    %div.form-group.col-md-12
      = form.input :student_id, as: :hidden, input_html: { value: params[:user] }
      = form.input :grade, collection: 1..6, class: "form-control"
      = form.input :subject_id, as: :select, input_html: { multiple: false },
                  collection: (teacher_subjects), label: 'Subjects:',
                  label_method: :name, value_method: :id
    %div.text-center.col-md-12
      = form.submit "Submit", class: "btn btn-success"
